{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint:src": "eslint \"src/**/*.ts\" --fix --ignore-pattern \"src/migrations/\"",
    "lint:test": "eslint \"test/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run",
    "seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed -n ./dist/ormconfig.js",
    "heroku-postbuild": "npm run typeorm:run",
    "test:ci": "jest --coverage --maxWorkers=50%"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.2",
    "@nestjs/config": "^0.2.4",
    "@nestjs/core": "^7.0.2",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^6.11.8",
    "@nestjs/swagger": "^4.5.1",
    "@nestjs/typeorm": "^6.3.4",
    "@nestjsx/crud": "^4.6.2",
    "@nestjsx/crud-typeorm": "^4.6.2",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "aws-sdk": "^2.675.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "connection-string": "^3.1.1",
    "cookie-parser": "^1.4.5",
    "faker": "^4.1.0",
    "moment": "^2.24.0",
    "mysql": "^2.18.1",
    "nest-router": "^1.0.9",
    "nodemailer": "^6.4.14",
    "nodemailer-mock": "^1.5.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.18.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.3",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.22",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/express": "^4.17.2",
    "@types/jest": "25.1.1",
    "@types/node": "^13.1.6",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "mock-fs": "^4.13.0",
    "node-mocks-http": "^1.8.1",
    "prettier": "1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".spec.ts$",
    "testPathIgnorePatterns": [
      "test/e2e"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/test/",
      "/src/migrations/",
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ]
  }
}
